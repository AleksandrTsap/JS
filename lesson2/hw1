
var a = 1, b = 1, c, d;
c = ++a; alert(c);           // 2   cначала увеличивается А, а потом присвается С
d = b++; alert(d);           // 1   сначала присваевается D, а потом увеличивается B
c = (2+ ++a); alert(c);      // 5   C = 2 + 3(А=2 и увеличивается еще на 1)
d = (2+ b++); alert(d);      // 4   D = 2 + 2(B=2 и увеличивается оно уже после присвоения D)
alert(a);                    // 3   в конечном счете для изменения самих A и B роли не играет префиксная
alert(b);                    // 3   или постпрефиксная запись
